import streamlit as st
import yfinance as yf
import pandas as pd
import plotly.graph_objs as go
from datetime import datetime, timedelta

st.set_page_config(layout="wide")
st.title("ğŸŒ ê¸€ë¡œë²Œ ì‹œê°€ì´ì•¡ ìƒìœ„ 10ê°œ ê¸°ì—… - ìµœê·¼ 1ë…„ ì£¼ê°€ ë³€í™”")

# ìƒìœ„ 10ê°œ ê¸€ë¡œë²Œ ì‹œê°€ì´ì•¡ ê¸°ì—… (2025ë…„ ê¸°ì¤€ ì—…ë°ì´íŠ¸ í•„ìš”í•  ìˆ˜ ìˆìŒ)
tickers = {
    "Apple": "AAPL",
    "Microsoft": "MSFT",
    "Saudi Aramco": "2222.SR",  # ì‚¬ìš°ë”” ì¦ì‹œ
    "Alphabet (Google)": "GOOGL",
    "Amazon": "AMZN",
    "Nvidia": "NVDA",
    "Berkshire Hathaway": "BRK-B",
    "Meta (Facebook)": "META",
    "TSMC": "TSM",
    "Tesla": "TSLA"
}

# ê¸°ê°„ ì„¤ì •
end_date = datetime.today()
start_date = end_date - timedelta(days=365)

# ë°ì´í„° ë‹¤ìš´ë¡œë“œ
@st.cache_data
def get_data(ticker):
    df = yf.download(ticker, start=start_date, end=end_date)
    df = df[['Close']].rename(columns={"Close": ticker})
    return df

data = pd.DataFrame()

for name, symbol in tickers.items():
    df = get_data(symbol)
    df.rename(columns={symbol: name}, inplace=True)
    if data.empty:
        data = df
    else:
        data = data.join(df, how='outer')

# ê²°ì¸¡ì¹˜ ì²˜ë¦¬
data.fillna(method="ffill", inplace=True)

# Plotly ê·¸ë˜í”„ ìƒì„±
fig = go.Figure()

for company in data.columns:
    fig.add_trace(go.Scatter(
        x=data.index,
        y=data[company],
        mode="lines",
        name=company
    ))

fig.update_layout(
    title="ê¸€ë¡œë²Œ ì‹œê°€ì´ì•¡ ìƒìœ„ 10ê°œ ê¸°ì—…ì˜ ì£¼ê°€ ë³€í™” (ìµœê·¼ 1ë…„)",
    xaxis_title="ë‚ ì§œ",
    yaxis_title="ì¢…ê°€ (USD)",
    template="plotly_white",
    hovermode="x unified",
    height=600
)

st.plotly_chart(fig, use_container_width=True)
